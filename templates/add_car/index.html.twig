{% extends 'base.html.twig' %}

{% block title %}Add Car{% endblock %}

{% block body %}
    <style>
        .example-wrapper {
            margin: 1em auto;
            max-width: 800px;
            width: 95%;
            font: 18px/1.5 sans-serif;
        }

        .example-wrapper code {
            background: #F5F5F5;
            padding: 2px 6px;
        }
    </style>

    <div class="example-wrapper">
        <h1>Add a new Car!</h1>
        {{ form(addCarForm) }}
        {% for message in app.flashes('message') %}
            <div class="flash-message">
                {{ message }}
            </div>
        {% endfor %}
    </div>
{% endblock %}
